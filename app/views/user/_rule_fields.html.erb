<fieldset class="well">
  <div class="input-prepend">
    <span class="add-on">Name</span><%= f.text_field :name, :placeholder => 'Rule name' %>
    <br/>
  </div>
  <div class="input-prepend">
    <span class="add-on">Query</span><%= f.text_field :filter, :placeholder => 'Filter / Query' %>
    <br/>
  </div>
  <div class="input-prepend">
    <span class="add-on">Action</span><%= f.select :action, OlccsPluginsManager.instance.repository.collect{|k,v| k.to_s}%>
    <br/>
  </div> <div class="input-prepend">
  <span class="add-on">Tribune</span><%= f.select :tribune_id, Tribune.all(:order => :name).collect {|a| [a.name, a.id]}%>
  <br/>
</div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove", "#", class: "remove_fields btn btn-danger" %>
</fieldset>