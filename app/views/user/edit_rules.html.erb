<h1>Rules</h1>

<%=  form_for @user, :url => {action: :save_rules} do |f| %>
    <%=  f.fields_for :rules do |builder| %>
        <%= render 'rule_fields', f: builder %>
    <%end%>
    <%=  link_to_add_fields "Add rule", f, :rules %>
    <div class="actions">
      <%= f.submit "Submit modifications", {class: "btn"}%>
    </div>
<% end %>


