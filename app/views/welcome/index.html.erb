<h1>Tribunes</h1>
<dl>
  <% @tribunes.each do |t| %>
  <dt><i class="icon-chevron-right"></i><%= link_to t.name, controller: :tribune, action: :index, tribune: t.name %></dt>
      <dd><i class="icon-zoom-in"></i><%=  t.posts.count %> posts, <%= t.links.count %> liens</dd>
      <dd><i class="icon-refresh"></i>Dernière mise à jour le <%= t.last_updated %></dd>
      <dd><%= form_tag({controller: :tribune, tribune: t.name, action: :search}, method: 'get', :class => "well form-search") do |f| %>
        <%= text_field_tag(:query, '', class: "input-medium search-query") %>
        <button type="submit" class="btn">Search</button>
      <% end %></dd>
  <% end %>
</dl>
